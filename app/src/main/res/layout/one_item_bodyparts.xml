<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/rcImageBodyParts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/radius_image"
            android:scaleType="centerCrop"
            android:src="@drawable/loading" />
          <LinearLayout
            android:id="@+id/layoutTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="5"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="4"                    android:textColor="@color/blue_white"
                    android:layout_margin="10dp"
                    android:fontFamily="@font/anton"
                    android:textSize="25sp"
                    android:id="@+id/rcTitleBodyParts"
                    android:text="Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/popupBodyParts"
                    android:layout_gravity="center"
                    android:src="@drawable/popup_ic"
                    android:layout_width="30sp"
                    android:layout_height="30sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layoutOptionBodyParts"
        android:visibility="gone"
        android:layout_marginHorizontal="20sp"
        android:gravity="right"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/itemEditBodyParts"
            android:layout_marginRight="10dp"
            android:src="@drawable/edit_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/itemDeleteBodyParts"
            android:src="@drawable/delete_red"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>