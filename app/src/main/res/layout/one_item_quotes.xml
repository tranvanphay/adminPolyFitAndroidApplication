<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/imageQuotes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/radius_image"
        android:scaleType="fitXY"
        android:src="@drawable/loading" />
    <TextView
        android:visibility="gone"
        android:textColor="@color/blue_white"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:fontFamily="@font/anton"
        android:textSize="25sp"
        android:id="@+id/titleQuotes"
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/layoutOptionQuotes"
        android:visibility="gone"
        android:layout_marginHorizontal="20sp"
        android:gravity="right"
        android:layout_gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/itemEditQuotes"
            android:layout_marginRight="10dp"
            android:src="@drawable/edit_blue"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/itemDeleteQuotes"
            android:src="@drawable/delete_red"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
    </LinearLayout>
</LinearLayout>