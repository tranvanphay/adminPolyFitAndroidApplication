<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="5dp"
    android:layout_height="match_parent"
    android:background="@drawable/corner_dialog">
    <LinearLayout
        android:background="@color/black"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialogLevelTitle"
                android:layout_marginHorizontal="20dp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:textAlignment="center"
                android:text="Create new level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/imvAddLevel"
            android:src="@drawable/ic_launcher_foreground"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <EditText
            android:id="@+id/edtTitleAddLevel"
            android:layout_marginHorizontal="20dp"
            android:textSize="25sp"
            android:background="@drawable/background_login"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:hint="Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edtDescriptionAddLevel"
            android:layout_marginHorizontal="20dp"
            android:textSize="25sp"
            android:background="@drawable/background_login"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:hint="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:id="@+id/saveNewLevel"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="15dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvButtonActionDialogLevel"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_margin="5dp"
                android:text="Save"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>