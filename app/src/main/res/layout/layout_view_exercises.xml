<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/outViewExercise"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
         <RelativeLayout
            android:id="@+id/layoutOptionExercise"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/editExercise"
                        android:src="@drawable/edit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:id="@+id/deleteExercise"
                        android:layout_marginLeft="20dp"
                        android:src="@drawable/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/layoutOptionEditExercise"
                android:visibility="gone"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            app:cardCornerRadius="5dp"
                            android:id="@+id/saveEditExercise"
                            app:cardBackgroundColor="@color/blue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginHorizontal="10dp"
                                android:text="Save"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/cancelEditExercise"
                            app:cardCornerRadius="5dp"
                            android:layout_marginLeft="10dp"
                            app:cardBackgroundColor="@color/colorAccent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_marginHorizontal="10dp"
                                android:text="Cancel"
                                android:textSize="20sp"
                                android:textColor="@color/white"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
    <ImageView
        android:src="@drawable/null_image"
        android:id="@+id/imvExercise"
        android:layout_gravity="center"
        android:layout_width="200dp"
        android:layout_height="200dp"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="25sp"
        android:text="Title"
        android:textColor="@color/white"
        android:id="@+id/tv_titleExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:textSize="20sp"
        android:text="Introduction"
        android:textColor="@color/white"
        android:id="@+id/tv_introductionExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/white"
        android:text="Content"
        android:textSize="15sp"
        android:id="@+id/tv_contentExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="15dp"
        android:textColor="@color/white"
        android:text="Tip"
        android:textSize="15sp"
        android:id="@+id/tv_tipExercise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/sets"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/tvSetsExercise"
                    android:textAlignment="viewStart"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:text="set"
                    android:inputType="numberDecimal"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/repeats"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/tvRepeatExercise"
                    android:textAlignment="viewStart"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:inputType="numberDecimal"
                    android:text="repeat"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="RtlCompat" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <ImageView
                    android:src="@drawable/rest"
                    android:layout_weight="0.2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"/>
                <EditText
                    android:id="@+id/tvRestExercise"
                    android:textAlignment="viewStart"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:inputType="numberDecimal"
                    android:text="Rest"
                    android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:ignore="RtlCompat" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <EditText
        android:visibility="gone"
        android:id="@+id/tv_videoUrl"
        android:textSize="20sp"
        android:hint="Video url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:id="@+id/btnPlayNow"
        android:layout_width="100dp"
        android:layout_margin="20dp"
        app:cardCornerRadius="8dp"
        android:layout_gravity="right"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/playnow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </androidx.cardview.widget.CardView>


</LinearLayout>